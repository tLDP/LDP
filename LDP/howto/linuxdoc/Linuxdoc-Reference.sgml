&lt;!entity psplit '&lt;/p>&lt;p>' >

&lt;!shortref pmap
	"&ero;#RS;B" null 
	"&ero;#RS;B&ero;#RE;" psplit
	"&ero;#RS;&ero;#RE;" psplit
--	'"' qtag  --
      	"[" lsqb
      	"~" nbsp
      	"_" lowbar
