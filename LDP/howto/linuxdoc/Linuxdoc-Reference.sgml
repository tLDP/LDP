&lt;!entity   ftag     '&lt;f>'    -- formula begin -- >
&lt;!entity   qendtag  '&lt;/sq>'>

&lt;!shortref sqmap 
      "&ero;#RS;B" null
--      '"' qendtag  --
      "[" lsqb
      "~" nbsp
      "_" lowbar
      "#" num
      "%" percnt
      "^" circ
      "{" lcub
      "}" rcub
      "|" verbar >

&lt;!usemap   sqmap    sq >

&lt;!element lq - - (p*)>
