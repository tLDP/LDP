#!/bin/sh
#
# This script does all the tasks to rebuild the documents
# in all their output forms (html, ps, etc.)
#
# Update the CVS tree
cd $LAMPADAS_CVS
cvs -q update -d -P

# Rebuild all documents
cd $LAMPADAS_LIB
./Lintadas.py && \
./Mirror.py && \
./Makefile.py

# Build outputs
cd $LAMPADAS_CACHE
make -ik

